@{
}
<h3>Editar Noticias</h3>
<div class="container">
<form method="post" asp-action="Editar">
    <input value="@Model.articulosNoticias[0].IdNoticias" hidden name="IdNoticias" />
    <div class="form-group">
        <label for="Titulo">Titulo</label>
        <input type="text" required value="@Model.articulosNoticias[0].Titulo" class="form-control" id="Titulo" name="Titulo" placeholder="Titulo">
    </div>
    <div class="form-group">
        <label for="PaisId">Pais</label>
        <select name="PaisId" id="PaisId" class="form-control">
            @foreach (var item in Model.pais)
            {
                <option value="@item.IdPais">@item.NombrePais</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="CategoriaId">Categoria</label>
        <select name="CategoriaId" id="CategoriaId" class="form-control">
            @foreach (var item in Model.categoria)
            {
                <option value="@item.IdCategoria">@item.NombreCategoria</option>
            }
        </select>
    </div>
    <div class="form-check">
        <label for="articulo">Articulo</label>
        <textarea class="form-control" required   id="articulo" name="Articulo">
            
        </textarea>
    </div>
    <br />
    <button type="submit" class="btn btn-success">Editar</button>
    @Html.ActionLink("Cancelar","Index","Home",null,new{@class="btn btn-danger"})
</form>

</div>
<h3>Edicion</h3>